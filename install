#!/bin/bash
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd $DIR
source ./shaddox.sh

function task_vim {
	log_util 'TASK' 'vim'
	install git
	install vim
	ensure_ln_s ./vim/vimrc ~/.vimrc
	if [[ -e ~/.vim/bundle/Vundle.vim ]]; then
		log_info "updating Vundle"
		cd ~/.vim/bundle/Vundle.vim
		git pull
		cd $DIR
	else
		log_info "installing Vundle"
		ensure_mkdir ~/.vim/bundle
		git clone https://github.com/gmarik/Vundle.vim.git ~/.vim/bundle/Vundle.vim
	fi
	vim +PluginInstall +PluginUpdate +qall
}

function task_nvim {
	log_util 'TASK' 'nvim'
	install git
	install nvim
	ensure_ln_s ./vim/nvimrc ~/.config/nvim/init.vim
	if [[ -e ~/.local/share/nvim/site/autoload/plug.vim ]]; then
		log_info "installing vim-plug"
		curl -fLs -o ~/.local/share/nvim/site/autoload/plug.vim --create-dirs \
			https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
	fi
	log_info "running PlugUpdate"
	nvim +PlugUpdate +qall
}

function task_zsh {
	log_util 'TASK' 'zsh'
	install git
	install zsh
	install safe-rm
	if [[ -e ~/.oh-my-zsh ]]; then
		log_info "updating oh-my-zsh"
		cd ~/.oh-my-zsh
		git pull
		cd $DIR
	else
		log_info "installing oh-my-zsh"
		git clone git://github.com/robbyrussell/oh-my-zsh.git ~/.oh-my-zsh
	fi
	ensure_ln_s ./zsh/zshrc ~/.zshrc
	ensure_ln_s ./zsh/minttyrc ~/.minttyrc
	ensure_ln_s ./zsh/nominaltech.zsh-theme ~/.oh-my-zsh/themes/nominaltech.zsh-theme
	ensure_ln_s ./zsh/nominaltech2.zsh-theme ~/.oh-my-zsh/themes/nominaltech2.zsh-theme
	chsh -s $(which zsh) || log_warn "could not chsh to zsh, please do this manually"
}

function task_git {
	log_util 'TASK' 'git'
	install git
	ensure_ln_s ./git/gitconfig ~/.gitconfig
	ensure_ln_s ./git/git-p4 /usr/lib/git-core/git-p4
}

function task_tmux {
	log_util 'TASK' 'tmux'
	install tmux
	ensure_ln_s ./tmux/tmux.conf ~/.tmux.conf
}

case "$1" in
	vim)
		task_vim
		;;
	nvim)
		task_nvim
		;;
	zsh)
		task_zsh
		;;
	git)
		task_git
		;;
	tmux)
		task_tmux
		;;
	'')
		task_vim
		task_zsh
		task_git
		;;
	*)
		log_error "unknown task '$1'"
		;;
esac
