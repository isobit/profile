#!/bin/bash
DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd $DIR
source ./shaddox.sh

function task_vim {
	log_util 'TASK' 'vim'
	install git
	install vim
	install curl
	ensure_ln_s ./vim/vimrc ~/.vimrc
	if [ ! -f ~/.vim/autoload/plug.vim ]; then
		log_info "installing vim-plug"
		curl -fLs -o ~/.vim/autoload/plug.vim --create-dirs \
			    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
	fi
	log_info "running PlugUpdate"
	vim +PlugUpdate +qall
}

function task_zsh {
	log_util 'TASK' 'zsh'
	install git
	install safe-rm
	install zsh
	ensure_ln_s ./zsh/zshrc ~/.zshrc
	ensure_ln_s ./zsh/zshrc.d ~/.zshrc.d
	ensure_ln_s ./zsh/minttyrc ~/.minttyrc
	chsh -s $(which zsh) || log_warn "could not chsh to zsh, please do this manually"
}

function task_git {
	log_util 'TASK' 'git'
	install git
	ensure_ln_s ./git/gitconfig ~/.gitconfig
	ensure_ln_s ./git/git-p4 /usr/lib/git-core/git-p4
}

function task_tmux {
	log_util 'TASK' 'tmux'
	install tmux
	ensure_ln_s ./tmux/tmux.conf ~/.tmux.conf
}

case "$1" in
	vim)
		task_vim
		;;
	zsh)
		task_zsh
		;;
	git)
		task_git
		;;
	tmux)
		task_tmux
		;;
	'')
		task_vim
		task_zsh
		task_git
		;;
	*)
		log_error "unknown task '$1'"
		;;
esac
