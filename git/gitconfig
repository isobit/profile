[alias]
	a = add
	aa = add -A
	aap = add -A -p
	ac = !git add -A && git commit -v
	ai = add -i
	ap = add -p
	br = branch
	c = commit -v
	co  = checkout
	cp = cherry-pick -x
	fork = checkout -b
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ; }; gi"
	lg = log --graph --date=relative --decorate
	st = status
	unfuck = !git fsck && git remote prune origin && git gc
[core]
	autocrlf = input
	ignorecase = false
	editor = vim
[color]
	ui = auto
[diff]
	mnemonicprefix = true
	renamelimit = 0
	renames = copies
[git-p4]
	detectRenames = true
[grep]
	lineNumber = true
[init]
	templatedir = ~/profile/git/template
[push]
	default = simple
[user]
	name = Josh Glendenning
	email = joshglendenning@gmail.com
[github]
	user = isobit
[include]
	path = ~/.gitconfig.local
